{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true, // Set to true to generate declaration files
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Classic",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "types": [
      "vite/client"
    ],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}